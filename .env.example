# PostgreSQL – use DATABASE_URL OR the individual fields (DATABASE_URL takes priority).
DATABASE_URL=
DB_USER=padraic
DB_PASS=yourpassword
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rpdata

# JWT signing secret – required; use a long random string in production.
JWT_SECRET=change-me-to-a-long-random-secret

# Server
DEBUG=false
PORT=:9000

# TLS autocert domains (comma-separated, production only).
TLS_DOMAINS=mmrace.app,www.mmrace.app

# MySQL source database – only needed when running cmd/migrate.
MYSQL_DSN=user:pass@tcp(host:3306)/rpData?parseTime=true
